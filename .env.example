# PostgreSQL Configuration
POSTGRES_USER=urlshortener
POSTGRES_PASSWORD=securepassword
POSTGRES_DB=shortener
POSTGRES_MULTIPLE_DATABASES=shortener,analytics

# Database URLs for each service
DATABASE_URL=postgresql://urlshortener:securepassword@postgres:5432/shortener
ANALYTICS_DATABASE_URL=postgresql://urlshortener:securepassword@postgres:5432/analytics

# Docker host settings - use postgres as host name inside Docker network
DB_HOST=postgres
DB_PORT=5432

# Service Configuration
BASE_URL=http://localhost:8000
SHORTENER_SERVICE_PORT=8000
ANALYTICS_SERVICE_PORT=8001

# Optional: Configure logging
LOG_LEVEL=INFO

# Optional: Set environment mode
ENVIRONMENT=development
